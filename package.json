{
  "name": "macroconverter",
  "version": "1.0.0",
  "description": "Converts publically available recipes or generated recipes into macronutrients . .",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently 'cd client && yarn start' 'cd server && yarn run dev'",
    "install:all": "cd client && yarn && cd ../server && yarn",
    "install:client": "cd client && yarn",
    "install:server": "cd server && yarn",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "concurrently": "^8.1.0",
    "prettier": "^2.8.8",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "typescript": "*"
  },
  "parserOptions": {
    "project": [
      "./client/tsconfig.json"
    ]
  }
}
